    <body>
        <referenceContainer name="content">
            <block
                class="Perspective\ViewModel\Block\ViewModelBlock"
                name="perspective.viewmodel"
                template="Perspective_ViewModel::view_model_template.phtml"
            >
                <arguments>
                    <argument name="view_model" xsi:type="object">Perspective\ViewModel\ViewModel\MyNewViewModel</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
