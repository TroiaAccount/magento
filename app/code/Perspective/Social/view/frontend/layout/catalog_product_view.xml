<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main">
            <block
                name="Perspective_Social"
                template="Perspective_Social::social.phtml"
                class="Magento\Catalog\Block\Product\View"
                before="product.price.tier"
            >
                <arguments>
                    <argument name="social" xsi:type="object">Perspective\Social\ViewModel\Social</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
