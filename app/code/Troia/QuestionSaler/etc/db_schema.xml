<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="question_saler" resource="default" engine="innodb" comment="Question Saler Table">
        <column xsi:type="smallint" name="id" padding="6" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="text" name="name" nullable="false" comment="Customer name"/>
        <column xsi:type="text" name="email" nullable="true" comment="Customer email"/>
        <column xsi:type="text" name="telephone" nullable="false" comment="Customer phone"/>
        <column xsi:type="text" name="question" nullable="false" comment="Customer question"/>
        <column xsi:type="smallint" name="status" padding="6" unsigned="true" nullable="false" default="0" comment="Customer question status"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
